{{#contentFor "title"}}
    {{title}}
{{/contentFor}}

<h1 class="page-header"> User
    <small>Password</small>
</h1>

<ol class="breadcrumb">
    <li><a href="./">Home</a></li>
    <li class="active">Change Password</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="clearfix">
            <div class="pull-left">
               <i class="fa fa-lock"></i>&nbsp;<strong>Change Password</strong>
            </div>
            <div class="pull-right">
                <a href="./" class="btn btn-sm btn-info">
                    <i class="fa fa-rotate-left"></i>&nbsp;Back
                </a>
            </div>
        </div>
    </div>
    <div class="panel-body">

         {{#if notice_message }}
            <div class="alert alert-{{{notice_type}}} alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <p class="text-left"><i class="fa fa-envelope"></i>&nbsp;{{{notice_message}}}</p>
            </div>
        {{/if}}

        <form method="post" action="./change_password/update" class="form-horizontal" id="form-submit" role="form" enctype="multipart/form-data">
            

            <div class="form-group">
                <label class="control-label col-sm-3" for="password">Old Password :</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="password" name="password" value="" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-3" for="new_password">New Password :</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="new_password" name="new_password" value="" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-3" for="new_password_confirmation">Password Confirmation :</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="new_password_confirmation" name="new_password_confirmation" value="" required="required">
                </div>
            </div>
            

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i>&nbsp;Save
                    </button>
                    <button type="reset" class="btn btn-warning">
                        <i class="fa fa-refresh"></i>&nbsp;Reset
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer"></div>
</div>
