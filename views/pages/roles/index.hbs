{{#contentFor "title"}}
    {{title}}
{{/contentFor}}

<h1 class="page-header"> {{title}}
    <small> Management</small>
</h1>

<ol class="breadcrumb">
    <li><a href="./">Home</a></li>
     <li><a href="javascript:void(0);">Master</a></li>
    <li class="active"> {{title}}</li>
</ol>

 {{#if notice_message }}
    <div class="alert alert-{{notice_type}} alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <p class="text-left">{{{notice_message}}}</p>
    </div>
{{/if}}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="clearfix">
            <div class="pull-left">
               <i class="fa fa-table"></i>&nbsp;<strong>List {{title}}</strong>
            </div>
            <div class="pull-right">
                <a href="{{createUrl}}" class="btn btn-sm btn-info">
                     <i class="fa fa-plus"></i>&nbsp;Create New
                </a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="container-fluid table-responsive">
            <table class="table table-striped" id="table-data">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="panel-footer"></div>
</div>

{{#contentFor "scripts"}}
   <script src="{{ baseUrl }}/static/scripts/roles.js?{{getUUID}}"></script>
{{/contentFor}}
