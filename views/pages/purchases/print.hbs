<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Hello World">
    <meta name="author" content="Sandy Andryanto">
    <title>Point Of Sales - Print Invoice Purchase Order</title>
    <!-- Bootstrap Core CSS -->
    <link href="{{ baseUrl }}/static/css/bootstrap.min.css" rel="stylesheet">
</head>

<body onload="window.print()">
    <div class="">
        <div class="container-fluid table-responsive">
            <h1 class='text-center'>
                PURCHASE ORDER INVOICE
            </h1>
            <hr>
            <table class="table table-striped">
                <thead>
                     <tr>
                        <th colspan="2">Invoice Date : {{ dateFormat data.invoice_date "YYYY-MM-DD" }}</th>
                        <th colspan="2">Invoice Number : {{ data.invoice_number }}</th>
                    </tr>
                    <tr>
                        <th colspan="2">Supplier : {{ data.supplier_name }}</th>
                        <th colspan="2">Casheir : {{ data.user_username }}</th>
                    </tr>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                     {{#each details}}
                    <tr>
                        <td>{{ this.sku }} - {{ this.name }}</td>
                        <td>{{ this.price }}</td>
                        <td>{{ this.qty }}</td>
                        <td>{{ this.total }}</td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="4">Grandtotal : {{ data.grandtotal }}</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</body>

</html>