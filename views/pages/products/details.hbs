{{#contentFor "title"}}
    {{title}}
{{/contentFor}}

<h1 class="page-header"> {{title}}
    <small> Management</small>
</h1>

<ol class="breadcrumb">
    <li><a href="./">Home</a></li>
    <li><a href="javascript:void(0);">Master</a></li>
    <li><a href="{{listURL}}">{{title}}</a></li>
    <li class="active"> Detail</li>
</ol>

 {{#if notice_message }}
    <div class="alert alert-{{notice_type}} alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <p class="text-left">{{{notice_message}}}</p>
    </div>
{{/if}}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="clearfix">
            <div class="pull-left">
               <i class="fa fa-search"></i>&nbsp;<strong>Detail</strong>
            </div>
            <div class="pull-right">
                <a href="{{listURL}}" class="btn btn-sm btn-primary">
                    <i class="fa fa-rotate-left"></i>&nbsp;Back
                </a>
                 <a href="{{createURL}}" class="btn btn-sm btn-success">
                     <i class="fa fa-plus"></i>&nbsp;Create New
                </a>
                 <a href="{{editURL}}" class="btn btn-sm btn-warning">
                    <i class="fa fa-edit"></i>&nbsp;Edit Data
                </a>
                 <a href="{{deleteURL}}" class="btn btn-sm btn-danger" id="btn-delete-data">
                    <i class="fa fa-trash"></i>&nbsp;Delete
                </a>
                <form id="form-delete" method="POST" action="{{deleteURL}}"></form>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form method="POST" class="form-horizontal" id="form-submit" role="form" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label col-sm-2">SKU :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{ data.sku }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Name :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{ data.name }}</p>
                </div>
            </div>
             {{#if data.image }}
            <div class="form-group">
                <label class="control-label col-sm-2">Image :</label>
                <div class="col-sm-3">
                    <img src="{{ baseUrl }}/static/{{ data.image }}" class="img img-responsive img-thumbnail" />
                </div>
            </div>
            {{/if}}
            <div class="form-group">
                <label class="control-label col-sm-2">Brand :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{ data.brands_name }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Type :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{ data.types_name }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Supplier :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{ data.suppliers_name }}</p>
                </div>
            </div>
             {{#if categories }}
            <div class="form-group">
                <label class="control-label col-sm-2">Categories :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{#each categories}} {{this.name}} ,  {{/each}}</p>
                </div>
            </div>
            {{/if}}
            <div class="form-group">
                <label class="control-label col-sm-2">Stock :</label>
                <div class="col-sm-10">
                    <p class ="form-control-static">{{ data.stock }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Price Purchase :</label>
                <div class="col-sm-10">
                    <p class ="form-control-static">{{ data.price_purchase }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Price Sales :</label>
                <div class="col-sm-10">
                    <p class ="form-control-static">{{ data.price_sales }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Profit :</label>
                <div class="col-sm-10">
                    <p class ="form-control-static">{{ data.price_profit }} %</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Date Expired :</label>
                <div class="col-sm-10">
                    <p class ="form-control-static date-format-text">{{dateFormat data.date_expired "YYYY-MM-DD"}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Description :</label>
                <div class="col-sm-10">
                    <p class ="form-control-static">{{ data.description }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Notes :</label>
                <div class="col-sm-10">
                    <p class ="form-control-static">{{ data.notes }}</p>
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer"></div>
</div>

