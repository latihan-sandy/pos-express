{{#contentFor "title"}}
    {{title}}
{{/contentFor}}

<h1 class="page-header"> {{title}}
    <small> Management</small>
</h1>

<ol class="breadcrumb">
    <li><a href="./">Home</a></li>
    <li><a href="javascript:void(0);">Master</a></li>
    <li><a href="{{listURL}}">{{title}}</a></li>
    <li class="active"> Detail</li>
</ol>

 {{#if notice_message }}
    <div class="alert alert-{{notice_type}} alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <p class="text-left">{{{notice_message}}}</p>
    </div>
{{/if}}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="clearfix">
            <div class="pull-left">
               <i class="fa fa-search"></i>&nbsp;<strong>Detail</strong>
            </div>
            <div class="pull-right">
                <a href="{{listURL}}" class="btn btn-sm btn-primary">
                    <i class="fa fa-rotate-left"></i>&nbsp;Back
                </a>
                 <a href="{{createURL}}" class="btn btn-sm btn-success">
                     <i class="fa fa-plus"></i>&nbsp;Create New
                </a>
                 <a href="{{editURL}}" class="btn btn-sm btn-warning">
                    <i class="fa fa-edit"></i>&nbsp;Edit Data
                </a>
                 <a href="{{deleteURL}}" class="btn btn-sm btn-danger" id="btn-delete-data">
                    <i class="fa fa-trash"></i>&nbsp;Delete
                </a>
                <form id="form-delete" method="POST" action="{{deleteURL}}"></form>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form method="POST" class="form-horizontal" id="form-submit" role="form" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label col-sm-2">Username :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{ data.username }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{ data.email }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Phone :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{ data.phone }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Active :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{{ is_active_label }}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Roles :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{ data.groups }}</p>
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer"></div>
</div>

