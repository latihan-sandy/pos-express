<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Hello World">
    <meta name="author" content="Sandy Andryanto">
    <title>Point Of Sales - Print Invoice Purchase Order By Supplier</title>
    <!-- Bootstrap Core CSS -->
    <link href="{{ baseUrl }}/static/css/bootstrap.min.css" rel="stylesheet">
    <script src="{{ baseUrl }}/static/js/jquery.js"></script>
    <script src="{{ baseUrl }}/static/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="{{ baseUrl }}/static/scripts/reports.js?{{getUUID}}"></script>
</head>

<body>
    <div class="">
        <div class="container-fluid table-responsive">
            <input type="hidden" id="baseUrl" value="{{ baseUrl }}" />
            <h1 class='text-center'>
                PURCHASE ORDER REPORT BY SUPPLIER
            </h1>
            <hr>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Supplier Name</th>
                        <th>Total Items</th>
                        <th>Total Purchase</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{ this.supplier_name }}</td>
                        <td>{{ this.total_buy }}</td>
                        <td>{{ this.total_purchase }}</td>
                    </tr>
                    {{/each}}    
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>