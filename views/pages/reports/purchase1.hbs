<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Hello World">
    <meta name="author" content="Sandy Andryanto">
    <title>Point Of Sales - Print Invoice Purchase Order By Period</title>
    <!-- Bootstrap Core CSS -->
    <link href="{{ baseUrl }}/static/css/bootstrap.min.css" rel="stylesheet">
    <script src="{{ baseUrl }}/static/js/jquery.js"></script>
    <script src="{{ baseUrl }}/static/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="{{ baseUrl }}/static/scripts/reports.js?{{getUUID}}"></script>
</head>

<body>
    <div class="">
        <div class="container-fluid table-responsive">
            <input type="hidden" id="baseUrl" value="{{ baseUrl }}" />
            <h1 class='text-center'>
                PURCHASE ORDER BY PERIOD
            </h1>
            <hr>
            {{#each data}}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th colspan="2">Invoice Date : {{ dateFormat this.invoice_date "YYYY-MM-DD" }}</th>
                        <th colspan="2">Invoice Number : {{ this.invoice_number }}</th>
                    </tr>
                    <tr>
                        <th colspan="2">Supplier : {{ this.supplier_name }}</th>
                        <th colspan="2">Casheir : {{ this.user_username }}</th>
                    </tr>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody data-id="{{ this.id }}" class="table-body-detail">
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="4">Grand Total : {{ this.grandtotal }}</th>
                    </tr>
                </tfoot>
            </table>
            {{/each}}        
            </div>
    </div>
</body>

</html>